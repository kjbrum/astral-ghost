{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}

{{! Everything inside the #author tags pulls data from the author }}
{{#author}}
    <header class="main-header {{#if cover}}" style="background-image: url({{cover}}){{else}}no-cover{{/if}}">
        {{> "social-media" }}

        <nav class="main-nav overlay clearfix">
            <a class="blog-logo icon-arrow-left" href="{{@blog.url}}">Home</a>

            {{#if @blog.navigation}}
                {{! <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a> }}
            {{/if}}
        </nav>
        <div class="vertical">
            <div class="main-header-content inner">
                {{#if @blog.logo}}
                <figure class="author-image">
                    <a class="img" href="{{url}}" style="background-image: url({{@blog.logo}})"><span class="hidden">{{name}}'s Picture</span></a>
                </figure>
                {{/if}}

                <h1 class="page-title">{{@blog.title}}</h1>
                <span class="author-stats"><i class="icon-stats"></i> {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}</span>
                <!--<h2 class="page-description">{{@blog.description}}</h2>-->
            </div>
        </div>
    </header>

    <main id="content" class="content" role="main">
        <section class="author-profile inner">
            {{#if bio}}
                <p class="author-bio">{{bio}}<br>Get ahold of me on <a href="http://github.com/kjbrum" class="github" target="_blank">Github</a>, <a href="http://twitter.com/kyle_brumm" class="twitter" target="_blank">Twitter</a>, <a href="https://dribbble.com/kjbrum" class="dribbble" target="_blank">Dribbble</a>, <a href="http://facebook.com/kylebrumm" class="facebook" target="_blank">Facebook</a>, or shoot me an <a href="mailto:{{email}}">email</a>.</p>
            {{/if}}
            <div class="author-meta">
                {{#if location}}<span class="author-location icon-location">{{location}}</span>{{/if}}
                {{#if website}}<span class="author-link icon-link"><a href="{{website}}">{{website}}</a></span>{{/if}}

                <div class="js-current-track">
                    <div class="track-details"></div>
                </div>

            </div>
        </section>
    </main>
{{/author}}

